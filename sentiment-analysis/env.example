# Sentiment Analysis Service Environment Variables

# Local LLM Configuration
LOCAL_LLM_URL=http://host.docker.internal:1234/v1/chat/completions
LOCAL_LLM_MODEL=default

# Service Configuration
SERVICE_PORT=8001
SERVICE_HOST=0.0.0.0

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/sentiment.log

# RSS Feed Timeouts
RSS_TIMEOUT=10
MAX_ARTICLES_PER_SOURCE=5

# Sentiment Analysis
SENTIMENT_CONFIDENCE_THRESHOLD=30 